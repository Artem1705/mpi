#include <mpi.h>
#include <stdio.h>

int main(int argc, char** argv) {
    MPI_Init(&argc, &argv);
    
    int rank, size;
    MPI_Comm_rank(MPI_COMM_WORLD, &rank);
    MPI_Comm_size(MPI_COMM_WORLD, &size);
    
    // Определяем соседей в кольце
    int left = (rank - 1 + size) % size;
    int right = (rank + 1) % size;
    
    int send_data = rank * 100;  // Данные для отправки
    int recv_data;               // Данные для приема
    
    MPI_Status status;
    
    // Синхронизация
    MPI_Barrier(MPI_COMM_WORLD);
    
    if (rank == 0) {
        // Процесс 0 начинает пересылку
        printf("Process %d sends %d to %d\n", rank, send_data, right);
        MPI_Send(&send_data, 1, MPI_INT, right, 0, MPI_COMM_WORLD);
        
        MPI_Recv(&recv_data, 1, MPI_INT, left, 0, MPI_COMM_WORLD, &status);
        printf("Process %d received %d from %d\n", rank, recv_data, left);
    } else {
        // Остальные процессы принимают и пересылают
        MPI_Recv(&recv_data, 1, MPI_INT, left, 0, MPI_COMM_WORLD, &status);
        printf("Process %d received %d from %d\n", rank, recv_data, left);
        
        send_data = recv_data + rank;  // Модифицируем данные
        
        printf("Process %d sends %d to %d\n", rank, send_data, right);
        MPI_Send(&send_data, 1, MPI_INT, right, 0, MPI_COMM_WORLD);
    }
    
    MPI_Finalize();
    return 0;
}
